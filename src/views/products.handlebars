<div class="main__container--side col s2"></div>
<div class="main__container__dinamic col s9">
  <div class="dinamic row">
    <div class="dinamic__container--addProduct inactiveAdd">
      <div class="col s12 m5 l4">
        <div class="dinamic__tittle row">
          <h3 class="dinamic__tittle--h3">
            Ingresa un producto
          </h3>
        </div>
        <div class="form row">
          <form method="POST" action="#" name="form" class="col s12">
            <div class="form__contain row">
              <div class="input-field">
                <select
                  id="selectCategory"
                  name="select"
                  class="dinav__order--select"
                >
                  <option class="dinav--option" value="Food">Categoria: Food</option>
                  <option class="dinav--option" value="Drink">Categoria: Drink</option>
                  <option class="dinav--option" value="Other">Categoria: Other</option>
                </select>
                <i class="arrowSelect"></i>
              </div>
            </div>
            <div class="form__contain row">
              <div class="input-field col s10">
                <input id="tittle" type="text" class="validate" required />
                <label for="tittle">Tittle</label>
              </div>
            </div>
            <div class="form__contain row">
              <div class="input-field col s12">
                <input id="description" type="text" class="validate" required />
                <label for="description">Description</label>
              </div>
            </div>
            <div class="form__contain row">
              <div class="input-field col s12">
                <input id="code" type="number" class="validate" required />
                <label for="code">Code</label>
              </div>
            </div>
            <div class="form__contain row">
              <div class="input-field col s12">
                <input id="price" type="number" class="validate" required />
                <label for="price">Price</label>
              </div>
            </div>
            <div class="form__contain row">
              <div class="input-field col s12">
                <input id="stock" type="number" class="validate" required />
                <label for="stock">Stock</label>
              </div>
            </div>
            <div class="form__contain row">
              <div class="input-field col s12">
                <label for="thumbnail">Thumbnail</label>
                <input id="thumbnail" type="text" class="validate" />
              </div>
            </div>
            <input
              type="submit"
              id="btnSave"
              class="form--btnSave col s5"
              value="Save"
            />
            <label class="col s2"></label>
            <input
              type="button"
              id="btnCancel"
              class="form--btnCancel col s5"
              value="Cancel"
            />
          </form>
        </div>
      </div>
    </div>
    <div class="dinamic__container--listProduct col m12">
      <div class="row noMargin">
        <div class="dinav__container col s12">
          <nav class="dinav__container--order col s4">
            <div class="row noMargin">
              <label for="ordenamiento" class="dinav__order--label">Ordenar por:
              </label>
            </div>
            <div class="dinav__order">
              <select
                id="orderProducts"
                name="select"
                class="dinav__order--select"
              >
                <option class="dinav--option" value="">Sin Ordenamiento</option>
                <option class="dinav--option" value="asc">Precio de menor a
                  mayor</option>
                <option class="dinav--option" value="desc">Precio de mayor a
                  menor</option>
              </select>
              <i class="arrowSelect"></i>
            </div>
          </nav>
          <nav class="dinav__container--filter col s8">
            <div class="dinav__filter">
              <div class="row noMargin">
                <label for="filtros" class="dinav__filter--label">Filtrar por:
                </label>
              </div>
              <div class="row noMargin">
                <div class="col s6">
                  <select
                    id="categoryProducts"
                    name="select"
                    class="dinav__order--select"
                  >
                    <option class="dinav--option" value="">Sin Categoria</option>
                    <option class="dinav--option" value="Food">Food</option>
                    <option class="dinav--option" value="Drink">Drink</option>
                    <option class="dinav--option" value="Other">Other</option>
                  </select>
                  <i class="arrowSelect"></i>
                </div>
                <div class="col s6">
                  <select
                    id="statusProducts"
                    name="select"
                    class="dinav__order--select"
                  >
                  <option
                      class="dinav--option"
                      value=""
                    >All</option>
                    <option
                      class="dinav--option"
                      value="success"
                    >Avaliable</option>
                    <option class="dinav--option" value="error">Not Avaliable</option>
                  </select>
                  <i class="arrowSelect"></i>
                </div>
              </div>
            </div>
          </nav>
        </div>
        <div class="dinamic__container--grid row noMargin">
          <div class="container__grid col m12">
            <!--dinamic content-->
          </div>
        </div>
      </div>
      <div class="row noMargin">
        <nav class="dinav__container--pages">
          <button id="page__btnIzq" class="dinav__pages--izq"><i
              class="fa-solid fa-arrow-left"
            ></i></button>
          <label class="dinav__pages--center"></label>
          <button id="page__btnDer" class="dinav__pages--der"><i
              class="fa-solid fa-arrow-right"
            ></i></button>
        </nav>
      </div>
    </div>
  </div>
</div>
<div class="main__container--side col s1"></div>
<div id="return"><a href="/" type="button"><i
      class="fas fa-light fa-reply-all"
    ></i><b>RETURN</b></a></div>
<button type="button" id="validate">VALIDATE</button>
